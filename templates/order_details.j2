{% extends "main.j2" %}
{% block content %}

<h1>Order Details</h1>

<div class="form-box">
  <div class="form-title">Add Order Details</div>
  <form action="/add-order-detail" method="POST">
    <div class="form-row">
      <label for="orderIDAdd">Order ID:</label>
      <select id="orderIDAdd" name="orderID" required>
        {% for order in orders %}
          <option value="{{ order.orderID }}">{{ order.orderID }}</option>
        {% endfor %}
      </select>

      <label for="menuItemIDAdd">Menu Item:</label>
      <select id="menuItemIDAdd" name="menuItemID" required>
        {% for item in menu_items %}
          <option value="{{ item.menuItemID }}">{{ item.menuItemID }} - {{ item.itemName }}</option>
        {% endfor %}
      </select>
    </div>

    <div class="form-row">
      <label for="qtyAdd">Quantity:</label>
      <input type="number" id="qtyAdd" name="quantityMenuItem" required min="1" step="1">
      <input type="submit" value="Add Order Detail">
    </div>
  </form>
</div>

<div class="form-box">
  <div class="form-title">Update Order Details</div>
  <form action="/update-order-detail" method="POST">
    <div class="form-row">
      <label for="orderIDUpdate">Order ID:</label>
      <select id="orderIDUpdate" name="orderID" required>
        {% for order in orders %}
          <option value="{{ order.orderID }}">{{ order.orderID }}</option>
        {% endfor %}
      </select>

      <label for="menuItemIDUpdate">Menu Item:</label>
      <select id="menuItemIDUpdate" name="menuItemID" required>
        {% for item in menu_items %}
          <option value="{{ item.menuItemID }}">{{ item.menuItemID }} - {{ item.itemName }}</option>
        {% endfor %}
      </select>
    </div>

    <div class="form-row">
      <label for="qtyUpdate">New Quantity:</label>
      <input type="number" id="qtyUpdate" name="quantityMenuItem" required min="1" step="1">
      <input type="submit" value="Update Order Detail">
    </div>
  </form>
</div>

<h2>Order Details List</h2>

{% if order_details %}
  <table border="1" cellpadding="5" cellspacing="0">
    <tr>
      <th>Order ID</th>
      <th>Menu Item ID</th>
      <th>Item Name</th>
      <th>Quantity</th>
      <th>Customer ID</th>
      <th>Customer Name</th>
      <th>Actions</th>
    </tr>
    {% for row in order_details %}
      <tr>
        <td>{{ row.orderID }}</td>
        <td>{{ row.menuItemID }}</td>
        <td>{{ row.itemName }}</td>
        <td>{{ row.quantityMenuItem }}</td>
        <td>{{ row.customerID }}</td>
        <td>{{ row.firstName }} {{ row.lastName }}</td>
        <td>
          <form action="/delete-order-detail" method="post" style="display:inline;">
            <input type="hidden" name="orderID" value="{{ row.orderID }}">
            <input type="hidden" name="menuItemID" value="{{ row.menuItemID }}">
            <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete this order detail?');">
          </form>
        </td>
      </tr>
    {% endfor %}
  </table>
{% else %}
  <p>No order details available.</p>
{% endif %}

<hr>

{% endblock %}
